    transform: none;
    box-shadow: none;
    background: rgba(107, 114, 128, 0.05);
    border-color: rgba(107, 114, 128, 0.2);
  }
  
  .nav-arrow {
    font-size: 1rem;
    font-weight: bold;
  }
  
  .nav-label {
