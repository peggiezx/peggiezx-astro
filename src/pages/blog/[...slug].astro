---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Pre-generate all blog slugs
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  
  // Group posts by project (extracted from slug path)
  const projectGroups = new Map();
  posts.forEach(post => {
    const projectName = post.slug.split('/')[0];
    if (!projectGroups.has(projectName)) {
      projectGroups.set(projectName, []);
    }
    projectGroups.get(projectName).push(post);
  });
  
  // Sort posts within each project by date (newest first) and generate navigation
  const allPaths = [];
  
  projectGroups.forEach((projectPosts, projectName) => {
    const sortedPosts = projectPosts.sort((a, b) => 
      b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
    );
    
    sortedPosts.forEach((post, index) => {
      const prevPost = index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null;
      const nextPost = index > 0 ? sortedPosts[index - 1] : null;
      
      allPaths.push({
        params: { slug: post.slug },
        props: { 
          post,
          prevPost,
          nextPost
        }
      });
    });
  });
  
  return allPaths;
}

// Get the post and navigation from props (passed from getStaticPaths)
const { post, prevPost, nextPost } = Astro.props;

// Destructure frontmatter into local variables
const { title, description = '', pubDate, heroImage } = post.data;

// Render the MDX content
const { Content } = await post.render();
---

<BaseLayout title={title} description={description}>
  <article class="blog-detail-page">
      <header>
        {heroImage && (
          <img 
            src={heroImage.src} 
            alt={heroImage.alt || title}
          />
        )}
        <h1>{title}</h1>
        <div class="post-meta">
          <time>
            {pubDate.toLocaleDateString(undefined, {
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            })}
          </time>
        </div>
      </header>
      
      <div class="content">
        <Content />
      </div>
      
      <div class="blog-navigation">
        <div class="nav-buttons">
          {prevPost ? (
            <a href={`/blog/${prevPost.slug}/`} class="btn btn-nav btn-prev">
              <span class="nav-arrow">←</span>
              <span class="nav-label">Previous</span>
            </a>
          ) : (
            <div class="btn btn-nav btn-disabled">
              <span class="nav-arrow">←</span>
              <span class="nav-label">Previous</span>
            </div>
          )}
          
          {nextPost ? (
            <a href={`/blog/${nextPost.slug}/`} class="btn btn-nav btn-next">
              <span class="nav-label">Next</span>
              <span class="nav-arrow">→</span>
            </a>
          ) : (
            <div class="btn btn-nav btn-disabled">
              <span class="nav-label">Next</span>
              <span class="nav-arrow">→</span>
            </div>
          )}
        </div>
      </div>
    </article>
</BaseLayout>

<style>
