---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Pre-generate all blog slugs
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({ 
    params: { slug: post.slug },
    props: { post }
  }));
}

// Get the post from props (passed from getStaticPaths)
const { post } = Astro.props;

// Destructure frontmatter into local variables
const { title, description = '', pubDate, heroImage } = post.data;

// Render the MDX content
const { Content } = await post.render();
---

<BaseLayout title={title} description={description}>
  <div class="container">
    <article>
      <header style="margin-bottom: 2rem;">
        {heroImage && (
          <img 
            src={heroImage.src} 
            alt={heroImage.alt || title}
            style="width: 100%; height: 300px; object-fit: cover; border-radius: 8px; margin-bottom: 1.5rem;"
          />
        )}
        <h1>{title}</h1>
        <div style="margin-bottom: 2rem;">
          <time>
            {pubDate.toLocaleDateString(undefined, {
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            })}
          </time>
        </div>
      </header>
      
      <div class="content">
        <Content />
      </div>
      
      <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #eee;">
        <a href="/blog" style="color: #0066cc; text-decoration: none;">
          ‚Üê Back to Blog
        </a>
      </div>
    </article>
  </div>
</BaseLayout>