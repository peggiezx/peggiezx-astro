    align-items: center;
    gap: 2rem;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #10b981;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }
  
  .btn-secondary {
    background: transparent;
    color: #6b7280;
    border: 2px solid #6b7280;
  }
  
  .btn-secondary:hover {
    background: #6b7280;
    color: white;
  }
  
  .btn-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(16, 185, 129, 0.05);
    border: 2px solid rgba(16, 185, 129, 0.2);
    color: #10b981;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-weight: 500;
    min-width: 120px;
  }
  
