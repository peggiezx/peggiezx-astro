  }
  
  /* Project blog cards styling */
  .blog-projects-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin: 2rem 2rem 2rem 2rem;
    width: calc(100% - 4rem);
  }
  
