<script>
  document.addEventListener('DOMContentLoaded', function() {
    const collapseBtns = document.querySelectorAll('.collapse-btn');
    
    collapseBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const card = this.closest('.project-blog-card');
        const entries = card.querySelector('.more-entries');
        const isExpanded = this.classList.contains('expanded');
        
        if (isExpanded) {
          // Collapse - hide additional entries
          entries.style.display = 'none';
          this.classList.remove('expanded');
          this.setAttribute('aria-label', 'Expand entries');
        } else {
          // Expand - show additional entries
          entries.style.display = 'block';
          this.classList.add('expanded');
          this.setAttribute('aria-label', 'Collapse entries');
        }
      });
    });

    // View All Projects functionality
    const viewAllProjectsBtn = document.getElementById('view-all-projects-btn');
    if (viewAllProjectsBtn) {
      viewAllProjectsBtn.addEventListener('click', function() {
        const projectsGrid = document.getElementById('projects-grid');
        const hiddenItems = projectsGrid.querySelectorAll('.hidden-item');
        const isExpanded = this.textContent.includes('Show Less');
        
        if (isExpanded) {
          // Collapse - hide additional items
          hiddenItems.forEach(item => {
            item.style.display = 'none';
          });
          this.textContent = 'View All Projects';
        } else {
          // Expand - show all items
          hiddenItems.forEach(item => {
            item.style.display = 'block';
          });
          this.textContent = 'Show Less Projects';
        }
      });
    }

    // View All Blog Topics functionality
    const viewAllBlogBtn = document.getElementById('view-all-blog-btn');
    if (viewAllBlogBtn) {
      viewAllBlogBtn.addEventListener('click', function() {
        const blogGrid = document.getElementById('blog-grid');
        const hiddenItems = blogGrid.querySelectorAll('.hidden-blog-item');
        const isExpanded = this.textContent.includes('Show Less');
        
        if (isExpanded) {
          // Collapse - hide additional topics
          hiddenItems.forEach(item => {
            item.style.display = 'none';
          });
          this.textContent = 'View All Topics';
        } else {
          // Expand - show all topics
          hiddenItems.forEach(item => {
            item.style.display = 'block';
          });
          this.textContent = 'Show Less Topics';
        }
      });
    }

    // View All Videos functionality
    const viewAllVideosBtn = document.getElementById('view-all-videos-btn');
    if (viewAllVideosBtn) {
      viewAllVideosBtn.addEventListener('click', function() {
        const videosGrid = document.getElementById('videos-grid');
        const hiddenVideos = videosGrid.querySelectorAll('.hidden-video');
        const isExpanded = this.textContent.includes('Show Less');
        
        if (isExpanded) {
          // Collapse - hide additional videos
          hiddenVideos.forEach(item => {
            item.style.display = 'none';
          });
          this.textContent = 'View All Videos';
        } else {
          // Expand - show all videos
          hiddenVideos.forEach(item => {
            item.style.display = 'block';
          });
          this.textContent = 'Show Less Videos';
        }
      });
    }
  });
</script>