---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

// Get recent blog posts
const posts = await getCollection('blog');
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const recentPosts = posts.slice(0, 3);
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Hero />

  <div class="container">
    <section id="projects">
      <h2>Featured Projects</h2>
      <p>
        A showcase of my recent work in developer tools, cloud computing, and software engineering.
      </p>

      <div class="projects-grid">
        <div class="project-card">
          <h3>Git Conflict Trainer CLI</h3>
          <p>Sandboxed tool to master merge-conflict resolution with hands-on practice scenarios.</p>
          <div class="tech-stack">
            <span class="tech-tag">Go</span>
            <span class="tech-tag">CLI</span>
            <span class="tech-tag">Git</span>
            <span class="tech-tag">Docker</span>
          </div>
        </div>
        
        <div class="project-card">
          <h3>Tiny-Streak Habit Tracker</h3>
          <p>iOS app with brain-hack timers and house-building animations to build lasting habits.</p>
          <div class="tech-stack">
            <span class="tech-tag">Swift</span>
            <span class="tech-tag">iOS</span>
            <span class="tech-tag">SwiftUI</span>
            <span class="tech-tag">Core Data</span>
          </div>
        </div>
      </div>

      <div style="text-align: center; margin-top: 2rem;">
        <a href="/projects" class="btn">
          View All Projects
        </a>
      </div>
    </section>

    <section>
      <h2>Latest Articles</h2>
      <p>
        Insights on developer advocacy, cloud technologies, and engineering best practices.
      </p>

      <div class="blog-grid">
        {recentPosts.map(post => (
          <article class="blog-post">
            <a href={`/blog/${post.slug}/`}>
              <h3>
                {post.data.title}
              </h3>
              <p>
                {post.data.description || 'No description available'}
              </p>
              <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem;">
                <time>
                  {post.data.pubDate.toLocaleDateString(undefined, {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <span style="color: #0066cc;">
                  Read More â†’
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>

      <div style="text-align: center; margin-top: 2rem;">
        <a href="/blog" class="btn btn">
          View All Posts
        </a>
      </div>
    </section>
  </div>
</BaseLayout>