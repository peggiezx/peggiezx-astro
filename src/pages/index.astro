---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import yelpCampImage from '../assets/projects/yelpcamp.png';
import ticTacToeImage from '../assets/projects/game-logo.png';

// Get blog posts organized by project
const allPosts = await getCollection('blog');
allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Group posts by project (extracted from slug path)
const projectGroups = new Map();
allPosts.forEach(post => {
  const projectName = post.slug.split('/')[0];
  if (!projectGroups.has(projectName)) {
    projectGroups.set(projectName, []);
  }
  projectGroups.get(projectName).push(post);
});

// Project descriptions
const projectDescriptions = {
  'circleshare': 'My recent social journal application',
  'technical-training': 'How I create technical curriculum to help developers',  
  'developer-advocacy': 'How I use my voice to reach out to a broader community'
};

// Convert to array and get most recent projects
const recentProjects = Array.from(projectGroups.entries())
  .map(([project, posts]) => ({
    name: project,
    displayName: project.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()),
    description: projectDescriptions[project] || 'Learning and building in public',
    posts: posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    latestPost: posts[0],
    totalPosts: posts.length
  }))
  .sort((a, b) => b.latestPost.data.pubDate.valueOf() - a.latestPost.data.pubDate.valueOf())
  .slice(0, 3); // Back to 3 projects

// Featured videos including YelpCamp project
const featuredVideos = [
  {
    id: 'yelpcamp-demo',
    title: 'YelpCamp - Full Stack Campground Review Platform',
    description: 'Complete walkthrough of YelpCamp featuring user authentication, image uploads, interactive maps, and CRUD operations',
    thumbnail: 'https://img.youtube.com/vi/M-DZPvMEdsI/maxresdefault.jpg',
    url: 'https://youtube.com/watch?v=M-DZPvMEdsI',
    publishedAt: new Date('2024-02-01'),
    tags: ['Node.js', 'Express', 'MongoDB']
  },
  {
    id: 'circleshare-demo',
    title: 'CircleShare - Social Journal Application',
    description: 'A modern social journal application that enables users to document their daily experiences and share them with their close circle of friends',
    thumbnail: 'https://img.youtube.com/vi/Nh4BXeyPGoI/maxresdefault.jpg',
    url: 'https://youtube.com/watch?v=Nh4BXeyPGoI',
    publishedAt: new Date('2024-09-18'),
    tags: ['React', 'Node.js', 'MongoDB']
  }
];

// Get featured projects
const allProjects = await getCollection('projects');
const featuredProjects = allProjects.filter(project => project.data.featured);

// Project images mapping
const projectImages = {
  'yelpcamp': yelpCampImage.src,
  'circleshare': 'https://res.cloudinary.com/peggiexplode/image/upload/v1758221770/Screenshot_2025-09-18_at_12.54.24_PM_nebwmt.png',
  'tic-tac-toe': ticTacToeImage.src,
  // Add more project images here as needed
};
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Hero />

  <div class="container" style="margin-top: -2rem;">
    <section id="projects">
      <h2 style="padding-left: 2rem;">Featured Projects</h2>
      <p style="padding-left: 2rem;">
        A showcase of my recent work in developer tools, cloud computing, and software engineering.
      </p>

      <div class="gallery-grid" id="projects-grid" style="margin-left: 2rem; gap: 3rem;">
        {featuredProjects.slice(0, 3).map(project => (
        <div class="gallery-item initial-item">
          <a href={`/projects/${project.slug}/`} class="gallery-link">
            <div class="gallery-image">
              {project.slug === 'yelpcamp' ? (
                <Image src={yelpCampImage} alt={project.data.title} />
              ) : project.slug === 'tic-tac-toe' ? (
                <Image src={ticTacToeImage} alt={project.data.title} />
              ) : (
                projectImages[project.slug] && <img src={projectImages[project.slug]} alt={project.data.title} />
              )}
            </div>
            <div class="gallery-content">
              <h3>{project.data.title}</h3>
              <p>{project.data.description}</p>
              {project.data.stack && (
              <div class="tech-stack">
                {project.data.stack.map(tech => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
              )}
            </div>
          </a>
        </div>
        ))}
        
        {featuredProjects.slice(3).map(project => (
        <div class="gallery-item hidden-item" style="display: none;">
          <a href={`/projects/${project.slug}/`} class="gallery-link">
            <div class="gallery-image">
              {project.slug === 'yelpcamp' ? (
                <Image src={yelpCampImage} alt={project.data.title} />
              ) : project.slug === 'tic-tac-toe' ? (
                <Image src={ticTacToeImage} alt={project.data.title} />
              ) : (
                projectImages[project.slug] && <img src={projectImages[project.slug]} alt={project.data.title} />
              )}
            </div>
            <div class="gallery-content">
              <h3>{project.data.title}</h3>
              <p>{project.data.description}</p>
              {project.data.stack && (
              <div class="tech-stack">
                {project.data.stack.map(tech => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
              )}
            </div>
          </a>
        </div>
        ))}
        
        <!-- Placeholder cards - first one visible initially -->
        <div class="gallery-item placeholder-card initial-item">
          <div class="gallery-image placeholder-image">
            <div class="placeholder-content">+</div>
          </div>
          <div class="gallery-content">
            <h3>More Projects</h3>
            <p>Check out additional projects and work samples.</p>
            <div class="tech-stack">
              <span class="tech-tag">Coming Soon</span>
            </div>
          </div>
        </div>
        
        <div class="gallery-item placeholder-card hidden-item" style="display: none;">
          <div class="gallery-image placeholder-image">
            <div class="placeholder-content">★</div>
          </div>
          <div class="gallery-content">
            <h3>Featured Work</h3>
            <p>Explore highlighted projects and collaborations.</p>
            <div class="tech-stack">
              <span class="tech-tag">In Progress</span>
            </div>
          </div>
        </div>
        
        <div class="gallery-item placeholder-card hidden-item" style="display: none;">
          <div class="gallery-image placeholder-image">
            <div class="placeholder-content">⚡</div>
          </div>
          <div class="gallery-content">
            <h3>Innovation Lab</h3>
            <p>Experimental projects and cutting-edge technologies.</p>
            <div class="tech-stack">
              <span class="tech-tag">Research</span>
            </div>
          </div>
        </div>
      </div>
      
      <div style="text-align: center; margin-top: 2rem;">
        <button class="btn" id="view-all-projects-btn">
          View All Projects
        </button>
      </div>

    </section>

    <section id="blog">
      <h2 style="padding-left: 2rem;">Blog</h2>
      <p style="padding-left: 2rem;">
        Follow my journey building projects and learning new technologies through daily logs.
      </p>

      <div class="blog-projects-grid" id="blog-grid">
        {recentProjects.slice(0, 1).map((project, index) => (
          <article class="project-blog-card initial-blog-item" data-project={project.name}>
            <div class="topic-header" data-project-index={index}>
              <div class="topic-info">
                <div class="topic-title">{project.displayName}</div>
                <div class="topic-description">{project.description}</div>
                <div class="topic-meta">{project.totalPosts} entries</div>
              </div>
              <button class="collapse-btn expanded" aria-label="Collapse entries">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            </div>
            
            <div class="blog-entries">
              <a href={`/blog/${project.latestPost.slug}/`} class="entry-item featured-entry">
                <div class="entry-content">
                  <h4 class="entry-title">{project.latestPost.data.title}</h4>
                  <time class="entry-date">
                    {project.latestPost.data.pubDate.toLocaleDateString(undefined, {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                <div class="entry-badge">Latest</div>
              </a>
              
              <div class="more-entries">
                {project.posts.slice(1).map(post => (
                  <a href={`/blog/${post.slug}/`} class="entry-item">
                    <div class="entry-content">
                      <span class="entry-title">{post.data.title}</span>
                      <time class="entry-date">
                        {post.data.pubDate.toLocaleDateString(undefined, {
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </article>
        ))}
        
        {recentProjects.slice(1).map((project, index) => (
          <article class="project-blog-card hidden-blog-item" data-project={project.name} style="display: none;">
            <div class="topic-header" data-project-index={index + 1}>
              <div class="topic-info">
                <div class="topic-title">{project.displayName}</div>
                <div class="topic-description">{project.description}</div>
                <div class="topic-meta">{project.totalPosts} entries</div>
              </div>
              <button class="collapse-btn expanded" aria-label="Collapse entries">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            </div>
            
            <div class="blog-entries">
              <a href={`/blog/${project.latestPost.slug}/`} class="entry-item featured-entry">
                <div class="entry-content">
                  <h4 class="entry-title">{project.latestPost.data.title}</h4>
                  <time class="entry-date">
                    {project.latestPost.data.pubDate.toLocaleDateString(undefined, {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                <div class="entry-badge">Latest</div>
              </a>
              
              <div class="more-entries">
                {project.posts.slice(1).map(post => (
                  <a href={`/blog/${post.slug}/`} class="entry-item">
                    <div class="entry-content">
                      <span class="entry-title">{post.data.title}</span>
                      <time class="entry-date">
                        {post.data.pubDate.toLocaleDateString(undefined, {
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div style="text-align: center; margin-top: 2rem;">
        <button class="btn" id="view-all-blog-btn">
          View All Topics
        </button>
      </div>

    </section>

    <section id="videos">
      <h2 style="padding-left: 2rem;">Videos</h2>
      <p style="padding-left: 2rem;">
        Watch me build projects and teach technologies step by step through comprehensive tutorials.
      </p>

      <div class="videos-grid" id="videos-grid">
        {featuredVideos.slice(0, 2).map(video => (
          <article class="video-card initial-video">
            <a href={video.url} target="_blank" rel="noopener noreferrer" class="video-thumbnail">
              <img src={video.thumbnail} alt={video.title} />
              <div class="play-overlay">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </a>
            
            <div class="video-content">
              <div class="video-header">
                <h3>Demo</h3>
                <span class="video-badge">YouTube</span>
              </div>
              
              <a href={video.url} target="_blank" rel="noopener noreferrer">
                <h4>{video.title}</h4>
                <p class="video-description">{video.description}</p>
                
                <div class="video-meta">
                  <time>
                    {video.publishedAt.toLocaleDateString(undefined, {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  <div class="video-tags">
                    {video.tags.map(tag => (
                      <span class="video-tag">{tag}</span>
                    ))}
                  </div>
                </div>
              </a>
            </div>
          </article>
        ))}
        
        {featuredVideos.slice(2).map(video => (
          <article class="video-card hidden-video" style="display: none;">
            <a href={video.url} target="_blank" rel="noopener noreferrer" class="video-thumbnail">
              <img src={video.thumbnail} alt={video.title} />
              <div class="play-overlay">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </a>
            
            <div class="video-content">
              <div class="video-header">
                <h3>Tutorial</h3>
                <span class="video-badge">YouTube</span>
              </div>
              
              <a href={video.url} target="_blank" rel="noopener noreferrer">
                <h4>{video.title}</h4>
                <p class="video-description">{video.description}</p>
                
                <div class="video-meta">
                  <time>
                    {video.publishedAt.toLocaleDateString(undefined, {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  <div class="video-tags">
                    {video.tags.map(tag => (
                      <span class="video-tag">{tag}</span>
                    ))}
                  </div>
                </div>
              </a>
            </div>
          </article>
        ))}
        
        <!-- Placeholder video cards -->
        <article class="video-card placeholder-video hidden-video" style="display: none;">
          <div class="video-thumbnail placeholder-video-thumb">
            <div class="placeholder-video-content">📹</div>
          </div>
          
          <div class="video-content">
            <div class="video-header">
              <h3>Coming Soon</h3>
              <span class="video-badge">YouTube</span>
            </div>
            
            <div class="video-info">
              <h4>New Tutorial Series</h4>
              <p class="video-description">Exciting new content coming soon to help you level up your development skills.</p>
              
              <div class="video-meta">
                <time>Coming Soon</time>
                <div class="video-tags">
                  <span class="video-tag">Tutorial</span>
                </div>
              </div>
            </div>
          </div>
        </article>
        
        <article class="video-card placeholder-video hidden-video" style="display: none;">
          <div class="video-thumbnail placeholder-video-thumb">
            <div class="placeholder-video-content">🎬</div>
          </div>
          
          <div class="video-content">
            <div class="video-header">
              <h3>Workshop</h3>
              <span class="video-badge">YouTube</span>
            </div>
            
            <div class="video-info">
              <h4>Live Coding Sessions</h4>
              <p class="video-description">Interactive coding workshops and live development sessions with Q&A.</p>
              
              <div class="video-meta">
                <time>Coming Soon</time>
                <div class="video-tags">
                  <span class="video-tag">Live</span>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>

      <div style="text-align: center; margin-top: 2rem;">
        <button class="btn" id="view-all-videos-btn">
          View All Videos
        </button>
      </div>

    </section>
  </div>
</BaseLayout>

