---
import BaseLayout from '../../layouts/BaseLayout.astro';

import ProjectCard from '../../components/ProjectCard.astro';

export const layout = '../../layouts/BaseLayout.astro';
export const title = 'Projects';
export const description = 'A showcase of my open-source projects and interactive demos';

const projects = [
  {
    title: 'Git Conflict Trainer CLI',
    desc: 'Sandboxed CLI that teaches safe merge-conflict resolution.',
    image: '/img/git-trainer.png',
    href: '/projects/git-trainer/',
    stack: ['Python', 'Click'],
  },
  {
    title: 'Tiny‑Streak Habit Tracker',
    desc: 'Offline‑first iOS app with brain‑hack timers & house‑building streak animations.',
    image: '/img/habit-tracker.png',
    href: '/projects/habit-tracker/',
    stack: ['SwiftUI', 'SwiftData'],
  },
];
---
<BaseLayout>
    <section class="py-12">
    <h1 class="text-4xl font-bold text-fg mb-6">Projects</h1>
    <div class="grid md:grid-cols-2 gap-8">
        {projects.map(project => (
        <ProjectCard
            title={project.title}
            desc={project.desc}
            image={project.image}
            href={project.href}
            stack={project.stack}
        />
        ))}
    </div>
    </section>
</BaseLayout>
