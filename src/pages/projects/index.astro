---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export const title = 'Projects';
export const description = 'A showcase of my open-source projects and interactive demos';

const projects = await getCollection('projects');
---
<BaseLayout title={title} description={description}>
    <div class="container">
        <section>
            <h1>Projects</h1>
            <p>A showcase of my open-source projects and interactive demos</p>
            
            <div class="gallery-grid">
                {projects.map(project => (
                <div class="gallery-item">
                    <a href={`/projects/${project.slug}/`} class="gallery-link">
                        <div class="gallery-image">
                            <img src={project.data.image.src} alt={project.data.title} />
                        </div>
                        <div class="gallery-content">
                            <h3>{project.data.title}</h3>
                            <p>{project.data.description}</p>
                            <div class="tech-stack">
                                {project.data.stack.map(tech => (
                                    <span class="tech-tag">{tech}</span>
                                ))}
                            </div>
                        </div>
                    </a>
                </div>
                ))}
            </div>
        </section>
    </div>
</BaseLayout>
