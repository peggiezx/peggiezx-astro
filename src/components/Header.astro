---
import { NAV_ITEMS, PERSONAL_INFO } from '../consts';

const pathname = new URL(Astro.request.url).pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-8 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-mono font-semibold tracking-tight text-gray-900 hover:text-blue-600 transition-all duration-300 hover:scale-105">
        {PERSONAL_INFO.name}
      </a>

      <!-- Navigation -->
      <div class="flex items-center" style="gap: 3rem;">
        {NAV_ITEMS.map(item => (
          <a 
            href={item.href} 
            class={`font-mono text-sm font-medium tracking-wide uppercase transition-all duration-300 hover:scale-105 ${
              pathname === item.href 
                ? 'text-blue-600 border-b-2 border-blue-600 pb-1' 
                : 'text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-200 pb-1'
            }`}
            style="display: inline-block;"
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>