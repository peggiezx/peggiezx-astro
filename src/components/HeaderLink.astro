---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {
  href: string;
  classList?: Record<string, boolean>;
}

const { href, class: className, classList, ...props } = Astro.props;
---

<!--
  HeaderLink: wraps <a> tags for navigation, applying conditional classes for active state.
  Props:
  - href: link URL
  - classList: object mapping class names to booleans for dynamic styling
-->
<a href={href} class={className} class:list={classList} {...props}>
  <slot />
</a>
